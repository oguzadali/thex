<div class="widget">
    <div class="widget-search">
        <form action="/posts/search" method="GET">
            <input name="searchData" class="search-input form-control" type="text" placeholder="Search">
            <button class="search-btn" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
</div>

<div class="widget">
    <h3 class="mb-3">Categories</h3>
    <div class="widget-category">
        {{#each categorys}}
        <a href="/posts/category/{{this.slug}}">{{this.name}}</a>
        {{!-- <a href="/posts/category/{{this.id}}">{{this.name}}<span>{{this.count}}</span></a> --}}
        {{/each}}
    </div>
</div>