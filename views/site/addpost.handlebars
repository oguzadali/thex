<div class="container">
    <h2 style="text-align:center; margin-bottom:40px ;">Add New Blog</h2>
    <form action="">
        <div class="form-group">
            <label for="blogTitle">Blog title</label>
            <input type="text" class="form-control" id="blogTitle" placeholder="blogtitle">
        </div>
        <div class="form-group">
            <label for="blogTitle">Blog subtitle</label>
            <input type="text" class="form-control" id="blogSubTitle" placeholder="subtitle">
        </div>

        <div class="form-group">
            <label for="blogImage">Image Url</label>
            <input type="url" class="form-control" id="blogImage" placeholder="Image Url">
        </div>
        <div class="form-group">
            <select class="form-control" id="category">
                {{#each categorys}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each }}
            </select>
        </div>


        <textarea name="editor" id="mytextarea"></textarea>

        <button type="button" id="myButton" class="btn btn-primary">Submit</button>
    </form>
