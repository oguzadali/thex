<script>
    $(document).ready(function () {
        $("#myButton").click(() => {
            var title = $("#blogTitle").val()
            var subtitle = $("#blogSubTitle").val()
            //var content = $("#blogContentence").val()
            var imageurl = $("#blogImage").val()
            var category = $("#category").val()
            //var file = $("#file").val()
            var content = CKEDITOR.instances.mytextarea.getData()
            //turn in to single data
            var data = {
                title: title,
                subtitle: subtitle,

                imageurl: imageurl,
                content: content,
                category: category,
                //file: file
            }
            $.post("new", { data: data })
                .then((addedBlog) => {
                    console.log("ssss")
                    console.log(addedBlog);
                })

            // console.log(title + "****" + contentence + "******" + imageUrl + "***" + blog);
        })
    })


</script>

